{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "lib": [
      "es2015",
      "dom",
      "esnext"
    ],
    "skipLibCheck": true,
    "allowJs": true,
    "sourceMap": false,
    "baseUrl": "./src",
    "outDir": "./build",
    "strict": false,
    "noImplicitAny": false,
    "typeRoots": [
      "node_modules/@types"
    ],
    "types": [
      "node",
      "jest"
    ],
    "esModuleInterop": true
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "test",
    "build",
    "**/?(*.)+(spec|test).[tj]s?(x)"
  ]
}
